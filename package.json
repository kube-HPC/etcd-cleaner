{
  "name": "etcd-cleaner",
  "version": "2.0.3",
  "description": "etcd and redis cleaner",
  "main": "app.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "lint": "./node_modules/eslint/bin/eslint.js .",
    "test": "NODE_ENV=test ./node_modules/mocha/bin/_mocha tests --colors --recursive --exit",
    "test:cov": "NODE_ENV=test ./node_modules/nyc/bin/nyc.js --include=lib --reporter=html --reporter=text --reporter=lcov mocha tests --colors --recursive --exit",
    "coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "start": "node app",
    "build": "./dockerfile/build.sh etcd-cleaner"
  },
  "pre-commit": {
    "run": [
      "lint",
      "test"
    ]
  },
  "keywords": [
    "hkube",
    "hkube-core"
  ],
  "author": "Hkube",
  "license": "MIT",
  "dependencies": {
    "@hkube/config": "^2.0.10",
    "@hkube/etcd": "^5.1.2",
    "@hkube/logger": "^1.0.27",
    "@hkube/redis-utils": "^1.0.3",
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^6.2.2",
    "mockery": "^2.1.0",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "sinon": "^9.2.2"
  }
}
